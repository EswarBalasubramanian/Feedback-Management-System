<%- include("header") -%>


<div class="container-fluid">
  <div class="row d-flex justify-content-center">


    <div class="card col-lg-3" style="width: 18rem; margin: 1rem;">
      <span class="text-center"><img src="/icons/file.png" class="card-img-top" alt="file" style="width: 100px;
      height: 100px;padding:15px;"></span>
      <div class="card-body">
        <h3 class="card-title">C<small>REATE A FORM</small></h3>
        <p class="card-text">To create a new feedback form with customizations.</p>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModalCenter">
          Create
        </button>
      </div>
    </div>

    <div class="card col-lg-3" style="width: 18rem; margin: 1rem;">
      <span class="text-center"><img src="/icons/folder.png" class="card-img-top" alt="file" style="width: 100px;
        height: 100px;padding:15px;"></span>
      <div class="card-body">
        <h3 class="card-title">L<small>IST OF FORMS</small></h3>
        <p class="card-text">To inspect list of forms and for shareable links.</p>
        <a href="list" class="btn btn-info">Show List</a>
      </div>
    </div>

    <div class="card col-lg-3" style="width: 18rem; margin: 1rem;">
      <span class="text-center"><img src="/icons/bar-chart.png" class="card-img-top" alt="file" style="width: 100px;
        height: 100px;padding:15px;"></span>
      <div class="card-body">
        <h3 class="card-title">R<small>ESULTS</small></h3>
        <p class="card-text">To get final generated output from the forms. </p>
        <a href="results" class="btn btn-info">Results</a>
      </div>
    </div>

    <div class="card col-lg-3" style="width: 18rem; margin: 1rem;">
      <span class="text-center"><img src="/icons/group.png" class="card-img-top" alt="file" style="width: 100px;
        height: 100px;padding:15px;"></span>
      <div class="card-body">
        <h3 class="card-title">S<small>TAFF DATA</small></h3>
        <p class="card-text">To add or remove Staff details in database. </p>
        <a href="staffs" class="btn btn-info">Edit Data</a>
      </div>
    </div>

  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Create a New Form</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <form action="/create" method="post">

        <div class="modal-body">

          <div class="form-group">
            <label class="required d-flex justify-content-left">Form Name:</label>
            <input type="text" class="form-control" name="formName">
          </div>

          <div class="form-group">
            <label class="required d-flex justify-content-left">Class Name:</label>
            <!-- <input type="text" class="form-control" name="className"> -->
          </div>

          <div class="input-group mb-3">
            <select class="custom-select" name="className" required>
              <option selected>Choose...</option>
              <% let count=1; %>
              <% classNameList.forEach(function(className){ %>
                <option value="<%= className %>"><%= className %></option>
                <% count++; %>
              <% }); %>
            </select>
          </div>

          <!-- <div class="form-group">
            <label class="d-flex justify-content-left">Form Description:</label>
            <textarea class="form-control" rows="3"></textarea>
          </div> -->

          <div class="form-group form-check">
            <input type="checkbox" name="checkbox" class="form-check-input d-flex justify-content-left" id="exampleCheck1" ></input>
            <label class="form-check-label d-flex justify-content-left" for="exampleCheck1">With default Questions</label>
            <input type="hidden" name="siteTitle" value="forms"></input>
          </div>

        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-info">Create</button>
        </div>

      </form>

    </div>
  </div>
</div>


<%- include("footer") -%>
